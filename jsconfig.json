{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["./src/*"],
      "contexts/*": ["./src/contexts/*"],
      "components/*": ["./src/components/*"],
      "config/*": ["./src/config/*"],
      "pages/*": ["./src/pages/*"],
      "reducers/*": ["./src/redux-flow/reducers/*"],
      "services/*": ["./src/services/*"],
      "utils/*": ["./src/utils/*"]
    },
  },
  "exclude": ["build", "node_modules", "coverage"]
}
